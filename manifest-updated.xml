<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
    xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
    xmlns:ov="http://schemas.microsoft.com/office/mailappversionoverrides/1.1"
    xsi:type="TaskPaneApp">

  <Id>18b7c716-85a0-4b80-b210-111111111111</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>VEUP</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>

  <DisplayName DefaultValue="SMS-VEUP"/>
  <Description DefaultValue="Send SMS from Excel using your PHP API."/>
  <Permissions>ReadWriteDocument</Permissions>

  <Hosts>
      <Host Name="Workbook"/>
      <SupportsSharedFolders>true</SupportsSharedFolders>
  </Hosts>

  <!-- UPDATE THIS URL TO YOUR HOSTING SERVICE -->
  <DefaultSettings>
      <SourceLocation DefaultValue="https://YOUR-APP-NAME.onrender.com/index.php"/>
  </DefaultSettings>

  <AppDomains>
      <AppDomain>https://YOUR-APP-NAME.onrender.com</AppDomain>
  </AppDomains>

  <VersionOverrides xsi:type="ov:VersionOverrides" Version="1.0">
      <ov:Hosts>
          <ov:Host xsi:type="ov:Workbook">
              <ov:DesktopFormFactor>
                  <ov:ExtensionPoint xsi:type="ov:PrimaryCommandSurface">
                      <ov:OfficeTab id="TabHome">
                          <ov:Group id="SMSVEUP.Group" label="SMS-VEUP">
                              <ov:Control xsi:type="ov:Button" id="SMSVEUP.OpenPane">
                                  <ov:Label resid="sms.label"/>
                                  <ov:Supertip>
                                      <ov:Title resid="sms.label"/>
                                      <ov:Description resid="sms.desc"/>
                                  </ov:Supertip>
                                  <ov:Action xsi:type="ov:ShowTaskpane">
                                      <ov:TaskpaneId>SMSVEUP.Taskpane</ov:TaskpaneId>
                                      <ov:SourceLocation resid="sms.url"/>
                                  </ov:Action>
                              </ov:Control>
                          </ov:Group>
                      </ov:OfficeTab>
                  </ov:ExtensionPoint>
              </ov:DesktopFormFactor>
          </ov:Host>
      </ov:Hosts>

      <ov:Resources>
          <bt:Urls>
              <!-- UPDATE THIS URL TOO -->
              <bt:Url id="sms.url" DefaultValue="https://YOUR-APP-NAME.onrender.com/index.php"/>
          </bt:Urls>

          <bt:ShortStrings>
              <bt:String id="sms.label" DefaultValue="SMS-VEUP"/>
          </bt:ShortStrings>

          <bt:LongStrings>
              <bt:String id="sms.desc" DefaultValue="Open SMS-VEUP panel"/>
          </bt:LongStrings>
      </ov:Resources>
  </VersionOverrides>
</OfficeApp>